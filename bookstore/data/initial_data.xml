<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sample Book Categories -->
        <record id="category_fiction" model="bookstore.category">
            <field name="name">Fiction</field>
            <field name="description">Fictional stories and novels</field>
        </record>
        
        <record id="category_non_fiction" model="bookstore.category">
            <field name="name">Non-Fiction</field>
            <field name="description">Educational and factual books</field>
        </record>
        
        <record id="category_technology" model="bookstore.category">
            <field name="name">Technology</field>
            <field name="description">Programming, IT, and technology books</field>
        </record>
        
        <!-- Sample Books -->
        <record id="book_sample_1" model="bookstore.book">
            <field name="name">Python Programming for Beginners</field>
            <field name="author">John Smith</field>
            <field name="isbn">978-1234567890</field>
            <field name="price">29.99</field>
            <field name="description">A comprehensive guide to learning Python programming from scratch.</field>
            <field name="category_id" ref="category_technology"/>
            <field name="is_published">True</field>
        </record>
        
        <record id="book_sample_2" model="bookstore.book">
            <field name="name">The Great Adventure</field>
            <field name="author">Jane Doe</field>
            <field name="isbn">978-0987654321</field>
            <field name="price">19.99</field>
            <field name="description">An exciting fictional story about courage and friendship.</field>
            <field name="category_id" ref="category_fiction"/>
            <field name="is_published">True</field>
        </record>
        
        <!-- Product Category for Books -->
        <record id="product_category_books" model="product.category">
            <field name="name">Books</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <!-- Payment Terms for Book Orders -->
        <record id="payment_term_immediate" model="account.payment.term">
            <field name="name">Immediate Payment</field>
            <field name="note">Payment required upon ordering</field>
        </record>
        
        <record id="payment_term_30_days" model="account.payment.term">
            <field name="name">30 Days</field>
            <field name="note">Payment due within 30 days</field>
        </record>
    </data>
</odoo>

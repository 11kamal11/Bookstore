<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Create a default product category for books -->
        <record id="product_category_books" model="product.category">
            <field name="name">Books</field>
            <field name="parent_id" ref="product.product_category_all"/>
        </record>
        
        <!-- Create payment terms for books -->
        <record id="payment_term_immediate" model="account.payment.term">
            <field name="name">Immediate Payment</field>
            <field name="note">Payment is due immediately</field>
        </record>
        
        <!-- Website Sale Configuration -->
        <record id="website_sale_config" model="res.config.settings">
            <field name="auth_signup_uninvited">b2c</field>
            <field name="website_sale_prevent_zero_price_sale">True</field>
        </record>
    </data>
</odoo>

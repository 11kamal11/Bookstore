<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bookstore_home" name="Bookstore Home">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="row mt-4">
                        <div class="col-12">
                            <h1>Welcome to Our Bookstore</h1>
                            <p>Discover amazing books from our collection</p>
                            <div class="mb-3">
                                <a href="/shop/cart" class="btn btn-outline-primary me-2">
                                    <i class="fa fa-shopping-cart"></i> View Cart
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <t t-foreach="books" t-as="book">
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title" t-esc="book.name"/>
                                        <p class="card-text">
                                            <strong>Author:</strong> <span t-esc="book.author"/><br/>
                                            <strong>Price:</strong> $<span t-esc="book.price"/><br/>
                                            <strong>In Stock:</strong> <span t-esc="book.quantity"/> available<br/>
                                            <t t-if="book.category_id">
                                                <strong>Category:</strong> <span t-esc="book.category_id.name"/>
                                            </t>
                                        </p>
                                        <div class="mt-auto">
                                            <t t-if="book.quantity > 0">
                                                <form action="/shop/cart/update" method="post" class="d-grid gap-2">
                                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                    <input type="hidden" name="product_id" t-att-value="book.product_id.id if book.product_id else book.id"/>
                                                    <div class="input-group mb-2">
                                                        <input type="number" name="add_qty" value="1" min="1" t-att-max="book.quantity" class="form-control" placeholder="Qty"/>
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="fa fa-cart-plus"></i> Add to Cart
                                                        </button>
                                                    </div>
                                                </form>
                                                <a t-attf-href="/bookstore/book/#{book.id}" class="btn btn-outline-primary w-100">View Details</a>
                                            </t>
                                            <t t-else="">
                                                <p class="text-danger mb-2">Out of Stock</p>
                                                <a t-attf-href="/bookstore/book/#{book.id}" class="btn btn-outline-primary w-100">View Details</a>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="book_detail" name="Book Detail">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="row mt-4">
                        <div class="col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/bookstore">Bookstore</a></li>
                                    <li class="breadcrumb-item active" t-esc="book.name"/>
                                </ol>
                            </nav>
                            
                            <div class="row">
                                <div class="col-md-8">
                                    <h1 t-esc="book.name"/>
                                    <p><strong>Author:</strong> <span t-esc="book.author"/></p>
                                    <p><strong>ISBN:</strong> <span t-esc="book.isbn"/></p>
                                    <p><strong>Price:</strong> $<span t-esc="book.price"/></p>
                                    <p><strong>Stock:</strong> <span t-esc="book.quantity"/> available</p>
                                    <t t-if="book.category_id">
                                        <p><strong>Category:</strong> <span t-esc="book.category_id.name"/></p>
                                    </t>
                                    <t t-if="book.description">
                                        <h3>Description</h3>
                                        <p t-esc="book.description"/>
                                    </t>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Purchase Book</h5>
                                            <div class="mb-3">
                                                <h4 class="text-primary">$<span t-esc="book.price"/></h4>
                                                <p class="text-muted mb-1">Stock: <span t-esc="book.quantity"/> available</p>
                                            </div>
                                            <t t-if="book.quantity > 0">
                                                <form action="/shop/cart/update" method="post">
                                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                    <input type="hidden" name="product_id" t-att-value="book.product_id.id if book.product_id else book.id"/>
                                                    <div class="mb-3">
                                                        <label class="form-label">Quantity:</label>
                                                        <input type="number" name="add_qty" value="1" min="1" t-att-max="book.quantity" class="form-control"/>
                                                    </div>
                                                    <div class="d-grid gap-2">
                                                        <button type="submit" class="btn btn-success btn-lg">
                                                            <i class="fa fa-cart-plus"></i> Add to Cart
                                                        </button>
                                                        <a href="/shop/cart" class="btn btn-outline-primary">
                                                            <i class="fa fa-shopping-cart"></i> View Cart
                                                        </a>
                                                    </div>
                                                </form>
                                            </t>
                                            <t t-else="">
                                                <div class="alert alert-warning">
                                                    <strong>Out of Stock</strong><br/>
                                                    This book is currently unavailable.
                                                </div>
                                            </t>
                                                    </form>
                                                </t>
                                                <t t-else="">
                                                    <p class="text-muted">Product not available for purchase</p>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/bookstore" class="btn btn-secondary mt-3">Back to Bookstore</a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Website Menu Items -->
    <record id="bookstore_menu" model="website.menu">
        <field name="name">Bookstore</field>
        <field name="url">/bookstore</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">50</field>
    </record>

</odoo>

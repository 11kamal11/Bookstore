<odoo>
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="price"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_bookstore_root" name="Bookstore"/>
    <menuitem id="menu_book" name="Books" parent="menu_bookstore_root"/>
    <act_window id="action_books" name="Books" res_model="bookstore.book" view_mode="form" menu_id="menu_book"/>
</odoo>

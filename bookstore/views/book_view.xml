<odoo>
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.form</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="name"/>
                            <field name="author"/>
                            <field name="isbn"/>
                            <field name="category_id"/>
                            <field name="publisher"/>
                            <field name="edition"/>
                        </group>
                        <group name="details">
                            <field name="language"/>
                            <field name="pages"/>
                            <field name="price"/>
                            <field name="cost_price"/>
                            <field name="stock_quantity"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="computed">
                            <field name="profit_margin" readonly="1"/>
                            <field name="age_years" readonly="1"/>
                            <field name="is_available" readonly="1"/>
                        </group>
                        <group name="dates">
                            <field name="publication_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Enter book description..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_book_kanban" model="ir.ui.view">
        <field name="name">book.kanban</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="stock_quantity"/>
                <field name="is_available"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div><field name="author"/></div>
                            <div><field name="category_id"/></div>
                            <div>Price: <field name="price"/></div>
                            <div>Stock: <field name="stock_quantity"/></div>
                            <div>Status: <field name="is_available"/></div>
                            <div>Active: <field name="active"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_book_search" model="ir.ui.view">
        <field name="name">book.search</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <search string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="category_id"/>
                <field name="publisher"/>
                <field name="genre"/>
                <field name="tags"/>
                <separator/>
                <filter string="Available" name="available" domain="[('stock_quantity', '>', 0)]"/>
                <filter string="Out of Stock" name="out_of_stock" domain="[('stock_quantity', '=', 0)]"/>
                <filter string="Low Stock" name="low_stock" domain="[('stock_quantity', '&lt;=', 'min_stock_level'), ('stock_quantity', '>', 0)]"/>
                <filter string="Featured" name="featured" domain="[('featured', '=', True)]"/>
                <separator/>
                <filter string="New Condition" name="new" domain="[('condition', '=', 'new')]"/>
                <filter string="E-books" name="ebooks" domain="[('book_format', '=', 'ebook')]"/>
                <filter string="Hardcover" name="hardcover" domain="[('book_format', '=', 'hardcover')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Author" name="group_author" context="{'group_by': 'author'}"/>
                    <filter string="Language" name="group_language" context="{'group_by': 'language'}"/>
                    <filter string="Format" name="group_format" context="{'group_by': 'book_format'}"/>
                    <filter string="Stock Status" name="group_stock_status" context="{'group_by': 'stock_status'}"/>
                    <filter string="Condition" name="group_condition" context="{'group_by': 'condition'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Category Views -->
    <!-- First create a simple tree view for books in category -->
    <record id="view_book_list_simple" model="ir.ui.view">
        <field name="name">book.list.simple</field>
        <field name="model">bookstore.book</field>
        <field name="arch" type="xml">
            <list string="Books" decoration-danger="stock_quantity &lt;= 0" 
                  decoration-warning="stock_quantity &lt;= min_stock_level and stock_quantity &gt; 0"
                  decoration-info="featured == True">
                <field name="name"/>
                <field name="author"/>
                <field name="category_id"/>
                <field name="book_format"/>
                <field name="condition"/>
                <field name="price"/>
                <field name="stock_quantity"/>
                <field name="stock_status"/>
                <field name="total_sold"/>
                <field name="profit_margin"/>
                <field name="featured" invisible="1"/>
                <field name="min_stock_level" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_category_form" model="ir.ui.view">
        <field name="name">category.form</field>
        <field name="model">bookstore.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_books" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="book_count" widget="statinfo" string="Books"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Featured" bg_color="bg-info" 
                            attrs="{'invisible': [('featured', '=', False)]}"/>
                    
                    <group>
                        <group name="basic_info">
                            <field name="name"/>
                            <field name="category_code"/>
                            <field name="parent_id"/>
                            <field name="display_order"/>
                        </group>
                        <group name="management">
                            <field name="category_manager_id"/>
                            <field name="featured"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="statistics">
                            <field name="in_stock_books" readonly="1"/>
                            <field name="avg_book_price" readonly="1"/>
                            <field name="total_books_value" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Enter category description..."/>
                        </page>
                        <page string="Child Categories">
                            <field name="child_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="book_count"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Books">
                            <field name="book_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="author"/>
                                    <field name="price"/>
                                    <field name="stock_quantity"/>
                                    <field name="stock_status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_category_list" model="ir.ui.view">
        <field name="name">category.list</field>
        <field name="model">bookstore.category</field>
        <field name="arch" type="xml">
            <list string="Categories" decoration-info="featured == True">
                <field name="display_order" widget="handle"/>
                <field name="name"/>
                <field name="category_code"/>
                <field name="parent_id"/>
                <field name="book_count"/>
                <field name="in_stock_books"/>
                <field name="avg_book_price"/>
                <field name="total_books_value"/>
                <field name="category_manager_id"/>
                <field name="featured" invisible="1"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">bookstore.book</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_book_search"/>
    </record>

    <record id="action_categories" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">bookstore.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_bookstore_root" name="Bookstore"/>
    <menuitem id="menu_book" name="Books" parent="menu_bookstore_root" action="action_books"/>
    <menuitem id="menu_category" name="Categories" parent="menu_bookstore_root" action="action_categories"/>
</odoo>

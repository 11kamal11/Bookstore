<!-- Book List View (using list instead of tree) -->
<record id="view_book_list" model="ir.ui.view">
    <field name="name">book.list</field>
    <field name="model">bookstore.book</field>
    <field name="arch" type="xml">
        <list string="Books">
            <field name="name"/>
            <field name="author"/>
            <field name="isbn"/>
            <field name="price"/>
            <field name="category_id"/>
            <!-- <field name="quantity"/> -->
            <!-- <field name="is_published" widget="boolean_toggle"/> -->
        </list>
    </field>
</record>
